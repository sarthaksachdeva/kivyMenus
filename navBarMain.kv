#:import C kivy.utils.get_color_from_hex
navBar:
    canvas.before:
        Color:
            rgba: .24, .65, .94, .7
            #rgb: C('#29b6f6')
            #rgba: .0, .0, .0, .3
        Rectangle:
            pos: self.pos
            size: self.size
            #source: './images/navbarBackground.jpg'
    id: navBarMenu
    orientation: 'horizontal'
    size_hint: 1, .07

    #WIDGET 1
    FocusButton3:
        background_color: (0.0, 0.0, 0.0, 0)
        id: burger
        on_press: burgerGif._coreimage.anim_reset(True)
        on_release: burgerDD.open(self)
        attachedTo: burgerDD
        Image:
            id: burgerGif
            source: './images/burgerIcon2Mod.gif'
            allow_stretch: True
            anim_delay:0.05
            anim_loop: 1
            y: self.parent.y
            x: self.parent.x
            size:self.parent.width + 10 ,self.parent.height + 10
    CustomDropDown:
        id: burgerDD
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.9
            Rectangle:
                pos: self.pos
                size: self.size
        FocusButton3:
            background_color: (0.0, 0.0, 0.0, 0)
            text: root.getText('opertn')
            size_hint_y: None
            height: 44
        FocusButton3:
            background_color: (0.0, 0.0, 0.0, 0)
